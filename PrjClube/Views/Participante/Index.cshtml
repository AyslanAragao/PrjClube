@model  IEnumerable<Clube.Modelo.Modelo.Participante>
@{
    ViewBag.Title = "Clube do Bem";
}



<div class="content-wrapper">
    <section class="content-header">
        <div class="col-lg-4"><h3>Membros</h3></div>
        <div class="col-lg-1 pull-right">
            <button class="btn btn-info edit" onclick="AbrirModal('#modal','_mdlCadastrar')">Novo Participante</button>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-lg-2">

            </div>

            <div class="col-lg-4">
            </div>
        }
    </section>
    <section class="content">


        <div class="row">
            <div class="col-md-12">

                <div class="col-sm-12">

                    <table id="listaParticipantes" class="table table-striped table-bordered tabela" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.cdParticipante)</th>
                                <th>@Html.DisplayNameFor(m => m.nmParticipante)</th>
                                <th>@Html.DisplayNameFor(m => m.dsApelido)</th>
                                <th>@Html.DisplayNameFor(m => m.nrTelefone)</th>
                                <th>@Html.DisplayNameFor(m => m.dtCadastro)</th>
                                <th>@Html.DisplayNameFor(m => m.dtEntrada)</th>
                                <th class="text-center">@Html.DisplayNameFor(m => m.cdPartIndicador)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-right">@item.cdParticipante</td>
                                        <td>@item.nmParticipante</td>
                                        <td>@item.dsApelido</td>
                                        <td>@item.nrDDD-@item.nrTelefone</td>
                                        <td>@item.dtCadastro.ToShortDateString()</td>
                                        @if (item.dtEntrada.ToShortDateString().Equals("01/01/0001") || item.dtEntrada.ToShortDateString().Equals("1/1/0001"))
                                        {
                                            <td>-</td>
                                        }
                                        else
                                        {
                                            <td>@item.dtEntrada.ToShortDateString()</td>
                                        }

                                        @if (null == item.Indicador || 0 == item.cdPartIndicador)
                                        {
                                            <td>Sem Indicação</td>
                                        }
                                        else
                                        {
                                            <td>@item.Indicador.nmParticipante</td>
                                        }
                                        <td>
                                            <button id="btnEditar" class="navbar-toggler" onclick="AbrirModal('#modal','_mdlCadastrar/@item.cdParticipante')">
                                                <span style="font-size:12px;">
                                                    <i class="glyphicon-edit" aria-hidden="true"></i>
                                                </span>
                                            </button>

                                            <button type="button" class="navbar-toggler" onclick="removerParticipante(this,@item.cdParticipante)">
                                                <span style="font-size:12px;">
                                                    <i class="fa fa-trash" aria-hidden="true"></i> Remover
                                                </span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td class="text-center" colspan="7">Sem nenhum participante ate o momento</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<div class="modal fade" id="modal">

</div>