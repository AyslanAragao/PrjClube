@model Clube.Modelo.Modelo.Participante

@{
    ViewBag.Title = "Cadastrar";
}

<div class="content-wrapper">
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="row">
                    <div class="col-lg-9">
                        <h3 class="box-title">Dados do Participante</h3>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body">

              @using (Html.BeginForm())
              {
                @Html.AntiForgeryToken()

                        <!-- text input -->
                    <div class="form-group">

                        <label>@Html.DisplayNameFor(model => model.nmParticipante)</label>
                        @Html.TextBoxFor(model => model.nmParticipante, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.nmParticipante)
                   
                        <label>@Html.DisplayNameFor(model => model.dsApelido)</label>
                        @Html.TextBoxFor(model => model.dsApelido, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.dsApelido)
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.nrDDD)</label>
                        @Html.TextBoxFor(model => model.nrDDD, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.nrDDD)

                        <label>@Html.DisplayNameFor(model => model.nrTelefone)</label>
                        @Html.TextBoxFor(model => model.nrTelefone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.nrTelefone)
                    </div>
                
                    <div class="col-lg-2" align="center">
                        <div class="form-group">
                            <button class="btn btn-facebook" id="save-btn">
                                <i class="fa fa-save"></i> &nbsp;&nbsp;Gravar
                            </button>
                        </div>
                    </div>
                

                }
            </div>
        </div>
    </section>
</div>
